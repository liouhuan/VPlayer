<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y26"
            app:layout_scrollFlags="scroll|enterAlways"
            app:tabIndicatorColor="@android:color/holo_orange_light"
            app:tabSelectedTextColor="@android:color/holo_orange_light"
            app:tabTextColor="@android:color/white" />

        <com.vplayer.www.ui.custom.MyRadioGroup
            android:id="@+id/rg_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x7"
            android:paddingRight="@dimen/x7"
            app:layout_scrollFlags="scroll|enterAlways" />

        <ImageView
            android:id="@+id/stretch_search"
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/y10"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y3"
            android:layout_marginBottom="@dimen/y4"
            android:background="@drawable/down_w"
            app:layout_scrollFlags="scroll|enterAlways" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
