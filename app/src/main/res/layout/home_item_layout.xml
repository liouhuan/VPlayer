<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/y6"
    android:layout_marginLeft="@dimen/x8"
    android:layout_marginRight="@dimen/x8"
    android:layout_marginTop="@dimen/y6"
    android:background="@android:color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y145">

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y138"
            android:scaleType="fitXY"
            Tools:background="@drawable/test1" />

        <FrameLayout
            android:id="@+id/fl_like_img"
            android:layout_width="@dimen/x37"
            android:layout_height="@dimen/y26"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x10"
            android:background="@drawable/circle">

            <ImageView
                android:id="@+id/like_img"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y12"
                android:layout_gravity="center"
                android:background="@drawable/like_no" />

        </FrameLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginRight="@dimen/x5"
        android:layout_marginTop="@dimen/y2"
        android:lines="1"
        android:singleLine="true"
        android:text="萨福克领导安防技术大咖雷锋精神快乐大姐夫发动机打的费撒......"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y8"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/y6"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/y12"
            android:tint="@android:color/background_dark"
            app:srcCompat="@drawable/calendar" />

        <TextView
            android:id="@+id/year_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x8"
            android:gravity="center_vertical"
            android:textSize="12sp"
            Tools:text="106分钟" />

        <ImageView
            android:layout_width="@dimen/x13"
            android:layout_height="@dimen/y12"
            android:layout_marginLeft="@dimen/x30"
            android:tint="@android:color/background_dark"
            app:srcCompat="@drawable/time_w" />

        <TextView
            android:id="@+id/min_item"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x8"
            android:gravity="center_vertical"
            android:textSize="12sp"
            Tools:text="106分钟" />

    </LinearLayout>


</LinearLayout>