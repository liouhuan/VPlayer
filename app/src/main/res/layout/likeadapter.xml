<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/x8"
    android:layout_marginRight="@dimen/x8"
    android:layout_marginBottom="@dimen/y6"
    android:layout_marginTop="@dimen/y6"
    android:background="@android:color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y155">

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y150"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/test2" />

        <FrameLayout
            android:layout_width="@dimen/x37"
            android:layout_height="@dimen/y26"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x10"
            android:background="@drawable/circle">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y12"
                android:background="@drawable/like_yes" />

        </FrameLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginRight="@dimen/x5"
        android:layout_marginTop="@dimen/y1"
        android:lines="1"
        android:singleLine="true"
        android:text="萨福克领导安防技术大咖雷锋精神快乐大姐夫发动机打的费撒......"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y8"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/y6"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/x13"
            android:layout_height="@dimen/y12"
            android:tint="@android:color/background_dark"
            app:srcCompat="@drawable/time_w" />

        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x10"
            android:text="106分钟"
            android:textSize="12sp" />

    </LinearLayout>


</LinearLayout>